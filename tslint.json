{
  "rulesDirectory": [
    "node_modules/codelyzer"
  ],
  "rules": {
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "ban": false,
    "no-invalid-regexp": true,
    "no-control-regex": true,
    "no-regex-spaces": true,
    "arrow-return-shorthand": true,
    "callable-types": true,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "curly": false,
    "deprecation": {
      "severity": "warn"
    },
    "eofline": true,
    "forin": true,
    "import-spacing": true,
    "indent": [
      true,
      "spaces"
    ],
    "interface-name": false,
    "jsdoc-format": true,
    "interface-over-type-literal": true,
    "label-position": true,
    "max-line-length": [
      true,
      240
    ],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [
      true,
      "debug",
      "log",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-any": false,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-empty": false,
    "no-empty-interface": true,
    "no-eval": true,
    "no-inferrable-types": [
      false,
      "ignore-params"
    ],
    "no-misused-new": true,
    "no-non-null-assertion": true,
    "no-shadowed-variable": true,
    "no-string-literal": false,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": true,
    "no-unnecessary-initializer": true,
    "no-unused-expression": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "object-literal-sort-keys": false,
    "no-conditional-assignment": true,
    "blank-lines": [
      true,
      {
        "after-imports": 2,
        "above-conditionals": 1,
        "above-methods": 1
      }
    ],
    "no-consecutive-blank-lines": [
      true,
      3
    ],
    "no-duplicate-variable": true,
    "no-internal-module": true,
    "no-require-imports": false,
    "no-unused-variable": [
      true,
      "check-parameters",
      {
        "ignore-pattern": "^ng*|^on*|index|key|event|value"
      }
    ],
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "no-var-requires": true,
    "object-curly-spacing": [
      true,
      "always"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "prefer-const": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "typedef": [
      true,
      "call-signature",
      "parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration"
    ],
    "radix": true,
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "variable-name": [
      false,
      "check-format",
      "allow-leading-underscore",
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast",
      "check-preblock"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "unified-signatures": true,
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase",
      "sp"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "page",
      "kebab-case"
    ],
    "no-output-on-prefix": true,
    "use-input-property-decorator": true,
    "use-output-property-decorator": true,
    "use-host-property-decorator": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "use-life-cycle-interface": true,
    "use-pipe-transform-interface": true,
    "directive-class-suffix": true
  }
}
